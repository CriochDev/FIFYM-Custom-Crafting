{
  "schemaVersion": 1,
  "id": "fifymcc",
  "version": "${version}",
  "name": "FIFYM: Custom Crafting",
  "description": "",
  "authors": [],
  "contact": {
    "repo": "https://github.com/samjb/FIFYM - Custom Crafting"
  },
  "license": "All-Rights-Reserved",
  "icon": "assets/fifymcc/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [ "net.crioch.fifymcc.FIFYMCustomCraftingMod"]
  },
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "accessWidener" : "fifymcc.accesswidener",
	"mixins": [
		"fifymcc.mixins.json",
		{
			"config": "fifymcc.client.mixins.json",
			"environment": "client"
		}
	],
	"custom": {
		"loom:injected_interfaces": {
			"net/minecraft/class_1737": ["net/crioch/fifymcc/interfaces/ComponentRecipeInputProvider"],
			"net/minecraft/class_1715": ["net/crioch/fifymcc/interfaces/ComponentCraftingInventory"],
			"net/minecraft/class_1729": ["net/crioch/fifymcc/interfaces/ComponentRecipeScreenHandler"],
            "net/minecraft/class_1661": ["net/crioch/fifymcc/interfaces/ComponentPlayerInventory"]
		}
	}
}
